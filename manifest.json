{
	"manifest_version": 3,
	"version": "1.0.0.0",
	"name": "ITALIZE_V2",
	"description": "Italize all text on web page.",
	"icons": {
		"16": "images/lotus.png",
		"48": "images/lotus.png",
		"128": "images/lotus.png"
	},
	"content_scripts": [{
        "matches": ["*://*/*","file:///*"],
        "run_at": "document_idle",
        "all_frames": true,
        "js": ["content_script.js"]
      }]
}